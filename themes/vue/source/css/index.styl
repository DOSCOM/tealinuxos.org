@import "_common"
@import "_header"
@import '_sidebar'

$width = 900px
$space = 50px

body
    background-color darken($light, 10%)

#logo
    span
        font-size 1.2em
    img
        display none

.sidebar
    display none

#mobile-bar
    &.top
        background-color transparent
        box-shadow none
        .logo
            display none

#header
    background-color #9AD6B5

#nav
    li
        a
            color $dark

#hero
    padding $space 40px
    background-color #fff
    .inner
        max-width $width
        margin 0 auto
    .left, .right
        display inline-block
        vertical-align top
    .left
        width 39%
    .right
        width 61%
    .hero-logo
        width 215px
        height 215px
        float right
        margin-right 60px
        margin-top 50px
    h1
        color #0a5230
        font-weight 300
        margin 0
        font-size 3em
    h2
        font-family $logo-font
        font-weight 500
        font-size 2.4em
        margin 0 0 10px
        display none
    .button
        margin 1em 0
        font-size 1.05em
        font-weight 600
        letter-spacing .1em
        &:first-child
            margin-right 1em
    .social-buttons
        list-style-type none
        padding 0
        li
            display inline-block
            vertical-align middle
            margin-right 15px
.tea-hero
    height 75vh

#highlights
    background-color #fff
    padding-bottom 70px
    .inner
        max-width ($width + 300)
        margin 0 auto
        text-align center
    .point
        width 24%
        display inline-block
        vertical-align top
        box-sizing border-box
        padding 0 2em
        h2
            color $green
            font-size 1.5em
            font-weight 400
            color $green
            margin 0
            padding .5em 0
        p
            color $light
        span
            font-size 30px
            color #0d9d57
    .description
        margin-top 2em
        width 75%
        display inline-block
        vertical-align top
        box-sizing border-box
        padding 0 2em
        p
            font-size 16px

#feature
    background #02B875
    color: #FFF
    .row
        margin 0
    .box-nested
        padding 2rem
        text-align center
    .left-side
        text-align: left
        padding-left: 12rem
    .right-side
        text-align: left
        padding-right: 8rem
    img,
    video
        width: 100%
        height: auto
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
    h1
        text-align: center
        color: #FFF
        font-size: 2.2vw
    h2
        color: #FFF
        font-size: 1.9vw
    p
        font-size: 1.1vw
#sponsors
    text-align center
    padding 35px 40px 45px
    background-color #f6f6f6
    .inner
        max-width 700px
        margin 0px auto
    h3
        color #999
        font-size .9em
        margin 0 0 10px
    a
        margin 20px 15px 0
        position relative
    a, img
        width 100px
        display inline-block
        vertical-align middle
    img
        transition all .3s ease
        filter contrast(0%)
        &:hover
            filter none
    a.vip
        display block
        margin 30px auto 15px
        width 200px
        img
            width 200px
    .become-sponsor
        margin-top 40px
        font-size .9em
        font-weight 700
        width auto
        background-color transparent

#footer
    padding $space 0
    color #fff
    text-align center
    a
        font-weight 700
        color #fff

@media screen and (max-width: $width)
    body
        -webkit-text-size-adjust none
        font-size 14px
    .sidebar
        display block
    #header
        display none
    #mobile-bar
        display block
    #hero
        padding $space 40px 30px
        .hero-logo
            float none
            margin 30px 0 15px
            width 140px
            height 140px
        .left, .right
            text-align center
            width 100%
        h1
            font-size 2em
        h2
            display block
        .button
            font-size .9em
    #highlights
        .point
            display block
            margin 0 auto
            width 300px
            padding 0 40px 30px
            span
                font-size 30px
                color #0d9d57
            &:before
                // content "â€”"
                // color $green
    #feature
        background #02B875
        color: #FFF
        .box-nested
            padding 1.5rem
            text-align center
        .left-side
            text-align: left
        .right-side
            text-align: left
        img
            width: 100%
            height: auto
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
        h1
            text-align: center
            color: #FFF
            font-size: 4.5vmax
        h2
            color: #FFF
            font-size: 4vmax
        p
            font-size: 3vmax
